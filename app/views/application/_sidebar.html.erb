<div class="dashboard-nav white-bg">
    <ul class="nav nav-pills nav-stacked">
        <li role="presentation" class="<%= 'active' if action_name == 'account' %>">
            <%= link_to dashboard_account_path do %>
            <i class="fa fa-user"></i>&nbsp;Account
            <% end %>
        </li>
        <li role="presentation" class="<%= 'active' if action_name == 'inbox' %>">
            <%= link_to dashboard_inbox_path do %>
            <i class="fa fa-envelope-o"></i>&nbsp;Inbox<span><%= " (#{unread_count_for(current_user)})" unless unread_count_for(current_user).zero? %></span>
            <% end %>
        </li>
        <li role="presentation" class="<%= 'active' if action_name == 'billing' %>">
            <%= link_to dashboard_billing_path do %>
            <i class="fa fa-building-o"></i>&nbsp;Billing
            <% end %>
        </li>
    </ul>
</div>
