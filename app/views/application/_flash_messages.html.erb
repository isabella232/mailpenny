<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <% flash.each do |key, value| %>
            <div class="alert alert-<%= bootstrap_class_for key %> alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <%= value %>
            </div>
            <% end %>
        </div>
    </div>
</div>
