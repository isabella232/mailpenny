                                    <input name="text" type="text" placeholder="To: alice_alice"/>
                                    <textarea name="textarea" placeholder="Type something  Alice Smith "></textarea>
                                    <i class="fa fa-paperclip"></i>
                                    <div class="btn-primary pull-right">
                                        <a href="#">Send</a>
                                    </div>
                                    <a class="md-close fa fa-close"></a>
                                </div>
                            </div>
                            <ul class="list2">
                                <li>
                                    <i class="fa fa-map-marker"></i><%= @profile.location %></li>
                                <li>
