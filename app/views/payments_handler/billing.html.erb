<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
    </div>
    <div class="col-sm-3">
      <h2>Balance</h2>
      <p>
        $5
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2>
        Cards
      </h2>
      <table class="table">

        <thead>
          <tr>
            <th>Name</th>
            <th>Last 4 Digits</th>
            <th>Expiration</th>
            <th>Primary</th>
            <th>Del</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              Waleed Jani
            </td>
            <td>
              0007
            </td>
            <td>
              02/10
            </td>
            <td>
              Yes
            </td>
            <td>
              Del
            </td>
          </tr>
          <tr>
            <td>
              Gilani Jani
            </td>
            <td>
              1337
            </td>
            <td>
              02/10
            </td>
            <td>
              No
            </td>
            <td>
              Del
            </td>
          </tr>
        </tbody>
      </table>
      <button class="btn btn-link" data-target="#add-card" data-toggle="collapse">Add a new card</button>
      <div class="collapse" id="add-card">
        <form action="add-card" id="add-card-form" method="POST">
          <span class="payment-errors"></span>
          <div class="form-row">
            <label>
              <span>Name</span>
              <input data-stripe="number" size="20" type="text"/>
            </label>
          </div>
          <div class="form-row">
            <label>
              <span>Card Number</span>
              <input data-stripe="number" size="20" type="text"/>
            </label>
          </div>

          <div class="form-row">
            <label>
              <span>CVC</span>
              <input data-stripe="cvc" size="4" type="text"/>
            </label>
          </div>

          <div class="form-row">
            <label>
              <span>Expiration (MM/YYYY)</span>
              <input data-stripe="exp-month" size="2" type="text"/>
            </label>
            <span>
              /
            </span>
            <input data-stripe="exp-year" size="4" type="text"/>
          </div>

          <button class="btn btn-success" type="submit">Add</button>
        </form>
      </div>
    </div>
  </div>
</div>
