<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-3 col-sm-push-9 col-lg-2 col-lg-push-10">
      <div>
        <p>Earned : <%=@user.wallet_amount.to_f%> BTC</p>
        <button class="btn btn-default" data-toggle="modal" data-target="#myModal">Withdraw</button>
      </div>
    </div>
    <div class="col-xs-12 col-sm-9 col-sm-pull-3 col-lg-10 col-lg-pull-2">
      <div class="message-logs">
        <table class="table">
          <thead>
          <tr>
            <th>Time</th>
            <th>Sender</th>
            <th>Status</th>
          </tr>
          </thead>
          <tbody>
         <% @user.transactions.all.each do |t|%>
          <tr>
            <td><%=t.updated_at%></td>
            <td><%=t.from%></td>
            <td><%=t.status%></td>
          </tr>
          <% end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
