<div style="margin-left: 75%;margin-top: 5%;">
  <h4 style="font-family: 'Champagne & Limousines'">Earned : <%=@user.wallet_amount.to_f%> BTC</h4>
  <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored show-modal" data-toggle="modal" data-target="#myModal">Withdraw</button>
</div>
<div class="tble_trans" style='width: 50%;margin-left: 35%;margin-top: 10%;'>
  <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
    <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">Time</th>
      <th>Sender</th>
      <th>Status</th>
    </tr>
    </thead>
    <tbody>
   <% @user.transactions.all.each do |t|%>
    <tr>
      <td class="mdl-data-table__cell--non-numeric"><%=t.updated_at%></td>
      <td><%=t.from%></td>
      <td><%=t.status%></td>
    </tr>
    <% end%>
    </tbody>
  </table>
</div>
