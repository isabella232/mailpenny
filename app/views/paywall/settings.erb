<div style="margin-top: 5%;margin-left: 45%;">
  <p style="font-family: 'Champagne & Limousines'; font-size: 20px;color: #D9453C;"><%=@user.credential.username%>@whitemail.io</p>
  <p style="font-size: 12px;color: #4285F4;margin-left: -30%;">*This is your public email address and you can use it anywhere you want,all the non-spam emails will be redirected to your private email address.</p>

</div>
<div id="form" style="margin-top: 10%;margin-left: 40%;">
<%= form_for @user,:url => 'update_user' ,:method=>'post',remote:true  do |f| %>
    <%= f.hidden_field :id, :value => @id %>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.email_field :email,:class=>'mdl-textfield__input',:id=>"inp1" ,:style=> 'width: 300px' ,:value => @user.email.to_s,:required=>true ,:disabled=>true %>
    <label class="mdl-textfield__label" for="sample4">Personal Email</label>
    <span class="mdl-textfield__error">Its not an email</span>
    </div>
    </br>
    </br>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_field :phone,:class=>'mdl-textfield__input',:id=>"inp2" ,:style=> 'width: 300px' ,:value => @user.phone.to_s,:required=>true %>
    <label class="mdl-textfield__label" for="sample4">Phone Number</label>
    </div>
    </br>
    </br>
  <!--  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
       <%= f.text_field :name ,:class=>'mdl-textfield__input',:id=>"inp2" ,:style=> 'width: 250px' ,:value=>@user.BTC_address.to_s,:required=>true %>


       <label class="mdl-textfield__label" for="sample4">BTC Address</label>
       <span class="mdl-textfield__error">Invalid Value ...</span>
    </div>
      </br> -->
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.number_field :reward ,:class=>'mdl-textfield__input' ,:id=>"inp3" ,:style=> 'width: 300px' ,:value=>@user.reward,:required=>true,:step=>'0.0001' %>

        <label class="mdl-textfield__label" for="sample4">Reward Amount</label>

        <span class="mdl-textfield__error">Input is not a number!</span>
      </div>
        <br>
      </br>
    <%= f.submit "Change", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" ,:style=> 'margin-left: 250px;background-color: #D9453C;' %>
<% end %>
</div>

