<div class="tble_trans">
  <%= form_for Whitelist.new ,:url=>'whitelist_add',remote:true do |f|%>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.text_field :email,:class=>'mdl-textfield__input'%>
      <label class="mdl-textfield__label" for="sample3">Email</label>
      </div>
      <%=f.hidden_field :id,:value=>@user.id%>
      <%= f.submit "Add" , class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" ,:style=>'margin-left:260px;background-color:#4cae4c;'%>
  <%end%>
  <table id="tr_white" class="mdl-data-table mdl-js-data-table mdl-shadow--2dp" style="max-height: 100px;">
    <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">Email</th>
    </tr>
    </thead>
    <tbody style="height: 200px;">
    <% @user.whitelists.all.each do |t|%>
        <tr id="<%=t.id%>">
          <td class="mdl-data-table__cell--non-numeric"><%= form_for Whitelist.new ,:url => 'whitelist_delete',:class=>'form-inline',:style=>'float:left;',:remote => true do |f| %>
              <%= f.text_field :email , :value => t.email,:disabled=>'true',:style=>'width:250px;' %>
              <%=f.hidden_field :id,:value=> t.id %>
              <%= f.submit "Delete" , class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" ,:style=>'margin-left:280px;background-color:#D9453C;' %>
          <%end%>
          </td>
        </tr>
    <% end%>
    </tbody>
  </table>


</div>
