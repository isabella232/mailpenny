<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-push-9 col-lg-4 col-lg-push-8">
      <div>
        <%= form_for Whitelist.new, class: 'form-inline',:url=>'whitelist_add', remote: true do |f|%>
        <div class="whitelist-form">
        <div class="form-group">
        </div>
        <label class="sr-only" for="emailToWhitelist">Email</label>
        <%= f.text_field :email, placeholder: '', id: 'emailToWhitelist', required:'true'%>
        <%=f.hidden_field :id,:value=>@user.id%>
        <button class="btn btn-default" type="submit">Add
        </button>
        <%end%>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-8 col-sm-pull-4 col-lg-8 col-lg-pull-4">
      <div class="message-logs">
        <table class="table" id="tr_white">
          <thead>
            <tr>
              <th class="mdl-data-table__cell--non-numeric">Email</th>
              <th class="mdl-data-table__cell--non-numeric">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% @user.whitelists.all.each do |t|%>
            <tr id="<%=t.id%>">
              <td class="mdl-data-table__cell--non-numeric"><%= form_for Whitelist.new ,:url => 'whitelist_delete',:class=>'form-inline',:remote => true do |f| %>
                <%= f.text_field :email, :value => t.email,:disabled=>'true' %>
                <%= f.hidden_field :id, :value=> t.id %>
                <%= f.submit "Delete", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
                <%end%>
              </td>
            </tr>
            <% end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
